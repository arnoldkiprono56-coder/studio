
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isUser() {
      return request.auth != null;
    }

    function isActualAdmin() {
      return isUser() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    function isSuperAdmin() {
      let role = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
      return isUser() && role == 'SuperAdmin';
    }
    
    // Admins can list licenses and predictions across all users for the dashboard.
    // This uses the correct syntax for collection group queries.
    match /{path=**}/user_licenses/{document=**} {
      allow list: if isActualAdmin();
    }
     match /{path=**}/predictions/{document=**} {
      allow list: if isActualAdmin();
    }

    // User profiles can be read by any user, but only listed by admins.
    // They can only be written by their owner or an admin.
    match /users/{userId} {
      allow get, write: if isOwner(userId) || isActualAdmin();
      allow list: if isActualAdmin();

      // Subcollections for a specific user
      match /user_licenses/{licenseId} {
        allow read, write: if isOwner(userId) || isActualAdmin();
      }

      match /predictions/{predictionId} {
         allow read, write: if isOwner(userId) || isActualAdmin();
      }
    }

    // Admins collection can be read by admins, but only written by SuperAdmins
    match /admins/{userId} {
      allow get: if isActualAdmin();
      allow list: if isActualAdmin();
      allow write: if isSuperAdmin();
    }
    
    // Transactions can be created by any authenticated user.
    // Admins can list all transactions. Regular users can only get their own.
    // Transactions cannot be updated or deleted by clients directly.
    match /transactions/{transactionId} {
      allow get: if isUser(); // A user can get a specific transaction they know the ID of.
      allow create: if isUser();
      allow list: if isActualAdmin(); // Admins can list all transactions.
      allow update, delete: if false; // Should be updated by backend webhook or trusted server process only
    }

    // Audit logs can be created by any authenticated user.
    // Only admins can get or list audit logs.
    // No one can update or delete logs from the client.
    match /auditlogs/{auditLogId} {
      allow create: if isUser();
      allow get, list: if isActualAdmin();
      allow update, delete: if false;
    }

    // Plans can be read by anyone, but only written by an admin.
    match /plans/{planId} {
      allow read: if true;
      allow write: if isActualAdmin();
    }
    
    // Prompts can only be read and written by an admin.
    match /prompts/{promptId} {
      allow read, write: if isActualAdmin();
    }

    // Game status can be read by anyone, but only written by an admin.
    match /game_status/{gameId} {
      allow read: if true;
      allow write: if isActualAdmin();
    }
  }
}
