
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isUser() {
      return request.auth != null;
    }

    // Checks if the user has an Admin or SuperAdmin role in their user document.
    function isActualAdmin() {
      // This requires that users can read their own user document.
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Admin', 'SuperAdmin'];
    }
    
    function isSuperAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'SuperAdmin';
    }

    // User profiles can be read by their owner or an admin.
    // Listing users is restricted to prevent data leakage. Admin features should use targeted queries.
    // Users can create their own profile.
    // Their role can only be changed by a SuperAdmin.
    // Other fields can be written by their owner.
    match /users/{userId} {
      allow get: if isOwner(userId) || isActualAdmin() || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Assistant';
      allow list: if isActualAdmin() || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Assistant'; // Allow admins to list users for management purposes
      allow create: if isOwner(userId);
      // A user can update their own document as long as they are not changing their role or photoURL.
      // A user can update their own photoURL.
      // A SuperAdmin can update any field, including the role.
      allow update: if (isOwner(userId) && !('role' in request.resource.data && request.resource.data.role != resource.data.role) && !('photoURL' in request.resource.data)) || (isOwner(userId) && 'photoURL' in request.resource.data && request.resource.data.keys().size() == 1) || isSuperAdmin();


      // Subcollections for a specific user
      match /user_licenses/{licenseId} {
        allow read, write: if isOwner(userId) || isActualAdmin() || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Assistant';
      }

      match /predictions/{predictionId} {
          allow get, create, update, delete: if isOwner(userId) || isActualAdmin() || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Assistant';
          allow list: if isOwner(userId) || isActualAdmin() || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Assistant';
      }
      
      // Admins can read/write their own chat messages
      match /admin_chat_messages/{messageId} {
        allow read, write: if isOwner(userId);
      }
      
      // Users can read/write their own support messages. Admins can access them too.
      match /support_messages/{messageId} {
        allow read, write: if isOwner(userId) || isActualAdmin() || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Assistant';
      }
    }
    
    // The /admins collection is no longer used for checking admin status.
    // Writes should be disabled from the client to prevent misuse.
    match /admins/{userId} {
      allow read, write: if false; 
    }

    // Audit logs can be created by any authenticated user.
    // Only admins can get or list audit logs.
    // No one can update or delete logs from the client.
    match /auditlogs/{auditLogId} {
      allow create: if isUser();
      allow get, list: if isActualAdmin() || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Assistant';
      allow update, delete: if false;
    }
    
    // Prompts can only be read and written by an admin.
    match /prompts/{promptId} {
      allow read, write: if isActualAdmin();
    }

    // Game status can be read by anyone, but only written by an admin.
    match /game_status/{gameId} {
      allow read: if true;
      allow write: if isActualAdmin();
    }
    
    // Notifications can be created by Admins and read by any authenticated user.
    match /notifications/{notificationId} {
        allow read: if isUser();
        allow create, update, delete: if isActualAdmin() || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Assistant';
    }

    // The AI running in a Genkit flow (server-side) can create these.
    // Admins can read/update/delete them.
    match /pending_activations/{activationId} {
      allow write: if true;
      allow read, list, update, delete: if isActualAdmin() || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Assistant';
    }
  }
}
