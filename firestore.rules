
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isUser() {
      return request.auth != null;
    }

    // Checks if the user has an Admin or SuperAdmin role in their user document.
    function isActualAdmin() {
      // This requires that users can read their own user document.
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Admin', 'SuperAdmin'];
    }
    
    function isSuperAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'SuperAdmin';
    }

    // This rule allows Admins to perform collection group queries on these subcollections.
    match /{path=**}/user_licenses/{licenseId} {
      allow list: if isActualAdmin();
    }
    match /{path=**}/predictions/{predictionId} {
      allow list: if isActualAdmin();
    }

    // User profiles can be read by their owner or an admin.
    // They can be listed only by admins.
    // Users can create their own profile.
    // Their role can only be changed by a SuperAdmin.
    // Other fields can be written by their owner.
    match /users/{userId} {
      allow get: if isOwner(userId) || isActualAdmin();
      allow list: if isActualAdmin();
      allow create: if isOwner(userId);
      // Role updates are restricted to SuperAdmins. Other fields can be updated by the owner.
      allow update: if (isOwner(userId) && !("role" in request.resource.data)) || isSuperAdmin();

      // Subcollections for a specific user
      match /user_licenses/{licenseId} {
        allow read, write: if isOwner(userId) || isActualAdmin();
      }

      match /predictions/{predictionId} {
          allow read, write: if isOwner(userId) || isActualAdmin();
      }
    }
    
    // The /admins collection is no longer used for checking admin status.
    // Writes should be disabled from the client to prevent misuse.
    match /admins/{userId} {
      allow read, write: if false; 
    }
    
    // Transactions can be created by any authenticated user.
    // Admins can list all transactions. Regular users can only get their own.
    // Transactions cannot be updated or deleted by clients directly.
    match /transactions/{transactionId} {
      allow get: if isUser() && (isOwner(get(/databases/$(database)/documents/transactions/$(transactionId)).data.userId) || isActualAdmin());
      allow list: if isActualAdmin();
      allow create: if isUser();
      allow update, delete: if false; // Should be updated by backend webhook or trusted server process only
    }

    // Audit logs can be created by any authenticated user.
    // Only admins can get or list audit logs.
    // No one can update or delete logs from the client.
    match /auditlogs/{auditLogId} {
      allow create: if isUser();
      allow get, list: if isActualAdmin();
      allow update, delete: if false;
    }

    // Plans can be read by anyone, but only written by an admin.
    match /plans/{planId} {
      allow read: if true;
      allow write: if isActualAdmin();
    }
    
    // Prompts can only be read and written by an admin.
    match /prompts/{promptId} {
      allow read, write: if isActualAdmin();
    }

    // Game status can be read by anyone, but only written by an admin.
    match /game_status/{gameId} {
      allow read: if true;
      allow write: if isActualAdmin();
    }
  }
}
