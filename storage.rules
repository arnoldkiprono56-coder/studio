
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Rules for profile pictures
    // Allow users to read, write, and delete their own profile picture.
    match /profile-pictures/{userId}/{fileName} {
      // The user must be authenticated and their UID must match the userId in the path.
      allow read: if true; // Profile pictures are public
      allow write: if request.auth != null && request.auth.uid == userId
                   // File size must be less than 2MB
                   && request.resource.size < 2 * 1024 * 1024
                   // File must be an image
                   && request.resource.contentType.matches('image/.*');
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}

    